<?xml version="1.0"?>
<robot name="iiwa14" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <!-- Import Rviz colors -->
  <xacro:include filename="$(find iiwa_arm)/urdf/materials.xacro" />
  <!--Import the lbr iiwa macro -->
  <xacro:include filename="$(find iiwa_arm)/urdf/iiwa14.xacro"/>
  <!--Import the gripper macro -->
  <xacro:include filename="$(find iiwa_arm)/urdf/iiwa_gripper.xacro"/>
  <!--<xacro:include filename="$(find slam_project)/urdf/accessories/hexagons.urdf.xacro"/>-->
  
  <xacro:arg name="hardware_interface" default="PositionJointInterface"/>
  <xacro:arg name="robot_name" default="iiwa"/>
  <xacro:arg name="origin_xyz" default="0 0 0"/>
  <xacro:arg name="origin_rpy" default="0 0 0"/>
  
  <!-- Fix to base_world -->
  <link name="base_footprint"/>
  <!--iiwa-->
  <xacro:iiwa14 hardware_interface="$(arg hardware_interface)" robot_name="$(arg robot_name)" parent="base_footprint">
    <origin xyz="$(arg origin_xyz)" rpy="$(arg origin_rpy)" />
  </xacro:iiwa14>

  <!--gripper-->
  <xacro:component_gripper robot_name="$(arg robot_name)" parent="$(arg robot_name)_link_7">
  </xacro:component_gripper>

  
</robot>
